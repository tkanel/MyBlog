@model MyBlog.ViewModels.PostCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit a post</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="CurrentAttachmentName" />
            <input type="hidden" asp-for="CurrentFeaturePhotoName" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedOn" class="control-label"></label>
                <input type="date" asp-for="CreatedOn" class="form-control" />
                <span asp-validation-for="CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnPublishOn" class="control-label"></label>
                <input type="date" asp-for="UnPublishOn" class="form-control" />
                <span asp-validation-for="UnPublishOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="AttachmentName" class="control-label"></label>
                <input asp-for="AttachmentName" class="form-control" />
                <text><i>**Current file name : </i></text><b><text class="control-label">@Model.CurrentAttachmentName</text></b>
                <span asp-validation-for="AttachmentName" class="text-danger"></span>

            </div>
            <div class="form-group">

                <label asp-for="FeauturePhotoName" class="control-label"></label>
                <input asp-for="FeauturePhotoName" class="form-control" />
                <text><i>**Current photo name : </i></text><b><text class="control-label">@Model.CurrentFeaturePhotoName</text></b>
                <span asp-validation-for="FeauturePhotoName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option>Select a Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogId" class="control-label"></label>
                <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId">
                    <option>Select a Blog</option>
                </select>
                <span asp-validation-for="BlogId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
